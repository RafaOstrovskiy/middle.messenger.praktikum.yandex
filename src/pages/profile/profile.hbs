<div class="profile__sidebar">
  <a href="/messenger">
    <img src="{{ arrowLeft }}" alt="arrow-left">
  </a>
</div>

<div class="profile__main">
  {{{ avatar }}}

  <div class="profile__name">
    <span>{{{ login }}}</span>
  </div>

  <ul class="profile__info-list">
    <li class="profile__list-item">
      <span>Почта</span>
      <span class="grey">{{email}}</span>
    </li>
    <li class="profile__list-item">
      <span>Логин</span>
      <span class="grey">{{ login }}</span>
    </li>
    <li class="profile__list-item">
      <span>Имя</span>
      <span class="grey">{{ first_name }}</span>
    </li>
    <li class="profile__list-item">
      <span>Фамилия</span>
      <span class="grey">{{ second_name }}</span>
    </li>
    <li class="profile__list-item">
      <span>Имя в чате</span>
      <span class="grey">{{ display_name }}</span>
    </li>
    <li class="profile__list-item">
      <span>Телефон</span>
      <span class="grey">{{ phone }}</span>
    </li>
  </ul>

    {{{ form }}}

  <ul class="profile__actions-list">
    <li class="profile__list-item">
      <a class="link" href="/settings">Изменить данные</a>
    </li>
    <li class="profile__list-item">
      <a class="link" href="/password-update">Изменить пароль</a>
    </li>
    <li class="profile__list-item">
        {{{ logoutBtn }}}
    </li>
  </ul>

</div>

